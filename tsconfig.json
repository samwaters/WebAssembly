{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["es2015", "es2015.iterable", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "paths": {
      "components/*": ["src/app/components/*"],
      "sagas/*": ["src/app/sagas/*"],
      "store/*": ["src/app/store/*"],
      "selectors/*": ["src/app/selectors/*"],
      "theme/*": ["src/app/theme/*"]
    },
    "target": "es5",
    "sourceMap": true
  },
  "include": [
    "./src/app/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}